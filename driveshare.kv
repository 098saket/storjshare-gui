#:kivy 1.8.0
#: import sm kivy.uix.screenmanager
#: set xpadding 20
#: set fieldheight 24
#: set headerheight 84

#: set TRANSPARENT [1, 1, 1, 0]
#: set RED [0.98, .43, 0.31, 1]
#: set GREEN [0.62, 0.83, 0.40, 1]
#: set BLUE [59/255, 175/255, 218/255, 1]
#: set DARK_BLUE [67/255, 74/255, 84/255, 1]
#: set GREY_BLUE [170/255, 178/255, 189/255, 1]
#: set WHITE [1, 1, 1, 1]
#: set ULTRA_LIGHT_GREY [0.93, 0.93, 0.93, 1]
#: set LIGHT_GREY [0.86, 0.86, 0.86, 1]
#: set DARK_GREY [0.26, 0.29, 0.33, 1]

<ScreenLayout@BoxLayout>:
	orientation: 'vertical'
	padding: 1, 1, 1, 2
	spacing: 1
	canvas:
		Color:
			rgba: ULTRA_LIGHT_GREY
		Rectangle:
			pos: root.pos
			size: root.size

<ElementLayout@BoxLayout>:
	orientation: 'horizontal'
	size_hint: 1, 1
	canvas:
		Color:
			rgba: WHITE
		Rectangle:
			pos: root.pos
			size: root.size

<NavButtonContainer@ElementLayout>:
	size_hint: 1, None
	height: 99
	spacing: 12
	padding: xpadding, 0

<NavButton@Button>:
	font_name: './fonts/Lato-Black.ttf'
	font_size: '16sp'
	background_normal: './images/btn_borderimage.png'
	background_down: './images/btndown_borderimage.png'
	border: 5, 5, 5, 5
	height: 40
	size_hint: 1, None
	pos_hint: {'center_y': 0.5}

<AlignedLabel@Label>:
	text_size: self.size
	halign: 'left'
	valign: 'middle'

<TextureSizedLabel@Label>:
	size_hint: None, None
	size: self.texture_size

<ThickLabel@Label>:
	font_name: './fonts/Lato-Bold.ttf'
	color: DARK_BLUE
	font_size: '14sp'

<ThinLabel@Label>:
	font_name: './fonts/Lato-Bold.ttf'
	color: GREY_BLUE
	font_size: '12sp'

<AlignedThickLabel@AlignedLabel+ThickLabel>:

<RelThickLabel@TextureSizedLabel+ThickLabel>:

<RelThinLabel@TextureSizedLabel+ThinLabel>:

<LabelTypeUpper@TextureSizedLabel+ThinLabel>:
	pos_hint: {'center_x': 0.5}
	y: self.parent.height / 2 + 4

<LabelTypeLower@TextureSizedLabel>:
	font_name: './fonts/Lato-Black.ttf'
	font_size: '16sp'
	color: DARK_BLUE
	pos_hint: {'center_x': 0.5}
	top: self.parent.height / 2

<SettingsInput@TextInput>:
	background_normal: './images/trans_btn_borderimage_left.png'
	background_active: './images/trans_btndown_borderimage_left.png'
	background_color: LIGHT_GREY
	border: 4, 4, 4, 4
	font_size: '11sp'
	multiline: False
	size_hint: 1, None
	height: fieldheight
	foreground_color: DARK_BLUE
	padding: 12, 4, 0, 0

<InputGroup@BoxLayout>:
	orientation: 'vertical'

<WhiteButton@Button>:
	font_name: './fonts/Lato-Bold.ttf'
	font_size: '12sp'
	color: BLUE
	padding_y: -1
	background_color: LIGHT_GREY
	background_normal: './images/trans_btn_borderimage.png'
	background_down: './images/trans_btndown_borderimage.png'
	border: 4, 4, 4, 4
	size_hint: 1, None
	height: fieldheight

<DropDownButton@WhiteButton>:
	background_normal: './images/trans_btn_borderimage_right.png'
	background_down: './images/trans_btndown_borderimage_right.png'
	size_hint: None, None
	width: 29
	Image:
		source: './images/dropdown.png'
		y: self.parent.y + self.parent.height/2 -4
		x: self.parent.x + self.parent.width -19
		size: 8, 8

<FileSelectDialog>:
	text_input: text_input
	BoxLayout:
		size: root.size
		pos: root.pos
		orientation: "vertical"
		FileChooserListView:
			id: filechooser
			on_selection: text_input.text = self.selection and self.selection[0] or ''
		TextInput:
			id: text_input
			size_hint_y: None
			height: 30
			multiline: False
		BoxLayout:
			size_hint_y: None
			height: 30
			Button:
				text: "Cancel"
				on_release: root.cancel()
			Button:
				text: "Select"
				on_release: root.select(filechooser.path, text_input.text)

<DropDownListButton@Button>:
	size_hint_y: None
	height: fieldheight
	font_name: './fonts/Lato-Bold.ttf'
	font_size: '12sp'
	color: BLUE
	background_color: WHITE
	background_normal: ''
	background_down: ''

<DropDownBackground@BoxLayout>:
	padding: 1, 1, 1, 2
	canvas:
		Color:
			rgba: LIGHT_GREY
		Rectangle:
			pos: root.pos
			size: root.size

<DenominatorDropDown>:
	DropDownBackground:
		size_hint_y: None
		height: len(DenominatorDropDownContainer.children) * fieldheight
		ElementLayout:
			id: DenominatorDropDownContainer
			orientation: 'vertical'
			DropDownListButton:
				text: 'MB'
			DropDownListButton:
				text: 'GB'
			DropDownListButton:
				text: 'TB'
				on_release:


<MainScreen@Screen>:
	name: 'main'
	ScreenLayout:
		ElementLayout:
			size_hint: 1, None
			height: headerheight
			BoxLayout:
				padding: 0, 0, xpadding, 0
				BoxLayout:
					size_hint: None, 1
					width: xpadding
					Image:
						source: './images/triangle.png'
						color: GREEN
						size_hint: None, None
						pos_hint: {'center_y': 0.5,'x': 0}
						width: 13
				RelativeLayout:
					Label:
						id: balance_label
						text: '23,428'
						color: DARK_BLUE
						font_name: './fonts/Lato-Black.ttf'
						font_size: '27sp'
						size_hint: None, None
						pos_hint: {'center_y': 0.5, 'x': 0}
						size: self.texture_size
					Label:
						text: 'SJCX'
						color: GREY_BLUE
						font_name: './fonts/Lato-Black.ttf'
						font_size: '11sp'
						size_hint: None, None
						size: self.texture_size
						x: balance_label.right + 5
						top: balance_label.top - 5
				Button:
					background_color: WHITE
					background_normal: './images/qmark.png'
					background_down: './images/qmarkdown.png'
					border: 0, 0, 0, 0
					size_hint: None, None
					height: 20
					width: 20
					pos_hint: {'center_y': 0.5, 'right': 1}
					on_release: app.help_button_callback()
		ElementLayout:
			size_hint: 1, None
			height: 133
			orientation: 'vertical'
			padding: xpadding, 0
			RelativeLayout:
				canvas:
					Color:
						rgba: LIGHT_GREY
					Rectangle:
						size: self.width, 10
						pos: 0, int(self.height/2) - 10
					Color:
						rgba: BLUE
					Rectangle:
						size: self.width * app.used_storage_percentage, 10
						pos: 0, int(self.height/2) - 10
				RelThickLabel:
					text: 'Storage Space'
					y: int(self.parent.height/2) + 17
				RelThickLabel:
					text: '58 %'
					y: int(self.parent.height/2) + 17
					right: self.parent.width
				RelThinLabel:
					text: '0'
					y: int(self.parent.height/2) - 33
				RelThinLabel:
					text: '100 GB'
					y: int(self.parent.height/2) - 33
					right: self.parent.width
		BoxLayout:
			size_hint: 1, 0.43
			spacing: 1
			ElementLayout:
				size_hint: None, 1,
				width: int(self.parent.width/3)
				RelativeLayout:
					orientation: 'vertical'
					LabelTypeUpper:
						text: 'FREE'
					LabelTypeLower:
						text: '42 GB'
			ElementLayout:
				RelativeLayout:
					orientation: 'vertical'
					LabelTypeUpper:
						text: 'USED'
					LabelTypeLower:
						text: '58 GB'
			ElementLayout:
				size_hint: None, 1,
				width: int(self.parent.width/3)
				RelativeLayout:
					orientation: 'vertical'
					LabelTypeUpper:
						text: 'TOTAL'
					LabelTypeLower:
						text: '100 GB'
		NavButtonContainer:
			NavButton:
				text: 'SETTINGS'
				background_color: BLUE
				on_release: root.manager.current = 'settings'
			NavButton:
				text: 'STOP' if app.farming_active else 'GO'
				background_color: RED if app.farming_active else GREEN
				on_release: app.toggle(); setattr(self, 'background_color', RED) if app.farming_active else setattr(self, 'background_color', GREEN); setattr(self, 'text', 'STOP') if app.farming_active else setattr(self, 'text', 'GO')

<SettingsScreen@Screen>:
	name: 'settings'
	ScreenLayout:
		ElementLayout:
			height: headerheight
			size_hint: 1, None
			padding: xpadding, 0
			RelativeLayout:
				AlignedThickLabel:
					font_name: './fonts/Lato-Light.ttf'
					text: 'Settings'
					font_size: '26sp'
				WhiteButton:
					text: 'Logs'
					font_name: './fonts/Lato-Semibold.ttf'
					width: 49
					size_hint: None, None
					pos_hint: {'center_y': 0.5, 'right': 1}
		ElementLayout:
			size_hint_y: 1
			BoxLayout:
				orientation: 'vertical'
				padding: xpadding, 24
				spacing: 10
				InputGroup:
					AlignedThickLabel:
						text: 'Node'
					BoxLayout:
						SettingsInput:
							text: 'node1.metadisk.org'
						DropDownButton:
				BoxLayout:
					spacing: 12
					InputGroup:
						AlignedThickLabel:
							text: 'Allocate Space'
						BoxLayout:
							SettingsInput:
								text: '20'
							DropDownButton:
								id: test
								text: 'GB'
								width: 50
								halign: 'left'
								valign: 'middle'
								padding_x: -6
								text_size: self.size
								on_release: app.dropdown.open_drop(self)

					InputGroup:
						AlignedThickLabel:
							text: 'Space Folder'
						BoxLayout:
							WhiteButton:
								text: 'BROWSE'
								on_release: app.show_fileselect()
				InputGroup:
					AlignedThickLabel:
						text: 'SJCX Payout Address'
					BoxLayout:
						SettingsInput:
							text: '1C5Ch7vrtGvAyGFbyGFbqZM3RFH3koHjse14a7'
							font_size: '9sp'
							padding: 12, 6, 0, 0
						DropDownButton:
		NavButtonContainer:
			NavButton:
				text: 'CANCEL'
				background_color: BLUE
				on_release: root.manager.current = 'main' #placeholder, needs proper callback to discard settings
			NavButton:
				text: 'SAVE'
				background_color: GREEN
				on_release: root.manager.current = 'main' #placeholder, needs proper callback to save and use settings


# Root Widget
ScreenManager:
	transition: sm.NoTransition()
	MainScreen:
	SettingsScreen: